# Server Configuration
PORT=3000                                    # Application port
NODE_ENV=development                         # development, production, or test
API_VERSION=v1                               # API version for URL prefixing
API_PUBLIC_PREFIX=public                     # Public routes prefix
API_PRIVATE_PREFIX=private                   # Private (protected) routes prefix

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ekyb           # Main database URI
MONGODB_URI_TEST=mongodb://localhost:27017/ekyb-test # Test database URI

# JWT Configuration
JWT_SECRET=your-32-character-secret-key-here         # Min 32 characters
JWT_ACCESS_EXPIRATION=900                            # Access token expiration in seconds (15 minutes)
JWT_REFRESH_EXPIRATION=2592000                       # Refresh token expiration in seconds (30 days)
JWT_RESET_PASSWORD_EXPIRATION=600                    # Password reset token expiration in seconds (10 minutes)

# CORS Configuration
CORS_ORIGIN=http://localhost:5173                    # Frontend URL, comma-separated for multiple origins

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000                         # Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_MAX=100                                  # Maximum requests per window

# Email Configuration
SMTP_HOST=smtp.gmail.com                            # SMTP server host
SMTP_PORT=587                                       # SMTP server port
SMTP_USER=your.email@gmail.com                      # SMTP username
SMTP_PASS=your-app-specific-password                # SMTP password (use app-specific password for Gmail)
EMAIL_FROM=your-system@your-domain.com              # System email sender address

# Logging Configuration
LOG_LEVEL=debug                                     # debug, info, warn, or error

# File Upload Configuration
UPLOAD_LIMIT=5242880                               # Maximum upload size in bytes (5MB)

# Cookie Configuration
COOKIE_SECRET=your-32-character-cookie-secret-here  # Min 32 characters

# Client URL Configuration
CLIENT_URL=http://localhost:5173                    # Frontend application URL 